{
  "extends": "./tsconfig.json",
  "include": [
    ".react-router/types/**/*",
    "app/**/*",
    "app/**/.server/**/*",
    "app/**/.client/**/*",
    "database/**/*",
    "workers/**/*",
    "worker-configuration.d.ts",
    "src/components",
    "src/lib",
    "src/hooks", "database",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "lib": ["DOM", "DOM.Iterable", "ES2022"],
    "types": [ "node", "vite/client"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "baseUrl": ".",
    "rootDirs": [".", "./.react-router/types"],
    "paths": {
      "~/database/*": ["./database/*"],
      "~/*": ["./app/*"],
      "@/components/*": ["./src/components/*"],
      "@/lib/*": ["./src/lib/*"],
      "@/hooks/*": ["./src/hooks/*"],
    },
    "esModuleInterop": true,
    "resolveJsonModule": true
  }
}
